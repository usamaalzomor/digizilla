<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_digizilla_tree" model="ir.ui.view">
        <field name="name">digizilla.tree</field>
        <field name="model">digizilla.digizilla</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="country"/>
                <field name="joining_date"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="view_digizilla_kanban" model="ir.ui.view">
        <field name="name">digizilla.kanban</field>
        <field name="model">digizilla.digizilla</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div>
                                <strong><field name="name"/></strong>
                            </div>
                            <div>
                                <span><field name="gender"/></span>
                            </div>
                            <div>
                                <span><field name="company_id"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_digizilla_form" model="ir.ui.view">
        <field name="name">digizilla.form</field>
        <field name="model">digizilla.digizilla</field>
        <field name="arch" type="xml">
            <form string="Digizilla" create="false">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="gender"/>
                            <field name="country"/>
                            <field name="joining_date"/>
                            <field name="tags"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="customer_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string="Comments">
                            <field name="comments"/>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_digizilla" model="ir.actions.act_window">
        <field name="name">Digizilla</field>
        <field name="res_model">digizilla.digizilla</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p>
                Create and manage Digizilla records.
            </p>
        </field>
    </record>

    <menuitem id="menu_digizilla_root" name="Digizilla" sequence="10"/>
    <menuitem id="menu_digizilla" name="Digizilla" parent="menu_digizilla_root" action="action_digizilla" sequence="10"/>
</odoo>
