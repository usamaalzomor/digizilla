<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="digizilla_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <h2>Digizilla Report</h2>
                    <p><strong>Name:</strong> <span t-field="o.name"/></p>
                    <p><strong>Gender:</strong> <span t-field="o.gender"/></p>
                    <p><strong>Country:</strong> <span t-field="o.country"/></p>
                    <p><strong>Joining Date:</strong> <span t-field="o.joining_date"/></p>
                    <p><strong>Tags:</strong> <span t-field="o.tags"/></p>
                    <p><strong>Company:</strong> <span t-field="o.company_id.name"/></p>
                    <p><strong>Customers:</strong>
                        <t t-foreach="o.customer_ids" t-as="customer">
                            <span t-field="customer.name"/><br/>
                        </t>
                    </p>
                    <p><strong>Notes:</strong> <span t-field="o.notes"/></p>
                    <p><strong>Comments:</strong> <span t-field="o.comments"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>
