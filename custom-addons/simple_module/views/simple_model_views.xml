<!-- simple_module/views/simple_model_views.xml -->
<odoo>
    <!-- Menu Item -->
    <menuitem id="menu_simple_module_root" name="Simple Module" sequence="10"/>

    <menuitem id="menu_simple_model" name="Simple Models" parent="menu_simple_module_root" sequence="1"/>

    <!-- Action -->
    <record id="action_simple_model" model="ir.actions.act_window">
        <field name="name">Simple Models</field>
        <field name="res_model">simple.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Simple Model
            </p>
        </field>
    </record>

    <!-- Link Action to Menu -->
    <menuitem id="menu_simple_model_action" parent="menu_simple_model" action="action_simple_model" sequence="1"/>

    <!-- Tree View -->
    <record id="view_simple_model_tree" model="ir.ui.view">
        <field name="name">simple.model.tree</field>
        <field name="model">simple.model</field>
        <field name="arch" type="xml">
            <tree string="Simple Models">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_simple_model_form" model="ir.ui.view">
        <field name="name">simple.model.form</field>
        <field name="model">simple.model</field>
        <field name="arch" type="xml">
            <form string="Simple Model">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
